= link_to 'Facebookで登録', user_facebook_omniauth_authorize_path, method: :post
= link_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path, method: :post

.session1-top
  %ul{class: "transitionーdiagram"}
    %li
      %span ①会員情報入力
    %li
      ➔ ②プロフィール情報入力
    %li
      ➔ ③送り先情報入力
.session1-container
  .form-title
    %h3 
      会員情報入力
      %span ※商品の購入・出品には会員登録が必要です
  .form-container
    = form_for(@user, url: user_registration_path) do |f|
      = render "devise/shared/error_messages", resource: @user
      .form-container__box
        .form-container__box--nickname
          = f.label :ニックネーム
          %span.form__require 必須
          %em
            (15文字以内)
          %br/
          = f.text_field :nickname, placeholder: "例）たろう"
      .form-container__box
        .form-container__box--email
          = f.label :メールアドレス
          %span.form__require 必須
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
      .form-container__box
        .form-container__box--password
          = f.label :パスワード
          %span.form__require 必須
          - if @minimum_password_length
            %em
              (#{@minimum_password_length}文字以上の半角英数字)
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
      .form-container__box
        .form-container__box--password-confirmation
          = f.label :パスワード（確認）
          %span.form__require 必須
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "再度パスワードを入力してください"
      .form-container__box
        %p 「次へ進む」のボタンを押すことにより、
        = link_to "利用規約"
        に同意したものとみなします
      .form-container__box
        .form-container__box--actions
          = f.submit "次へ進む", class: "session-next-btn"
          
